@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .password-change-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2.5rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.08);
    }

    .password-change-header {
        text-align: center;
        margin-bottom: 2.5rem;
        color: #2c3e50;
    }

        .password-change-header i {
            font-size: 2.8rem;
            color: #3498db;
            margin-bottom: 1.2rem;
        }

    .password-change-btn {
        background-color: #2c3e50;
        color: white;
        border: none;
        padding: 0.8rem;
        font-size: 1.1rem;
        border-radius: 8px;
        transition: all 0.3s;
        font-weight: 600;
    }

        .password-change-btn:hover {
            background-color: #1a252f;
            transform: translateY(-2px);
        }

    .form-floating label {
        color: #7f8c8d;
        font-weight: 500;
    }

    .form-control {
        border-radius: 8px;
        padding: 1rem;
        border: 1px solid #e0e0e0;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
        }

    .status-message {
        border-radius: 8px;
        margin-bottom: 2rem;
    }
</style>

<div class="d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="password-change-container">
        <div class="password-change-header">
            <i class="fas fa-key"></i>
            <h2>@ViewData["Title"]</h2>
            <p class="text-muted">Update your account password</p>
        </div>

        <partial name="_StatusMessage" for="StatusMessage" class="status-message" />

        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-floating mb-4">
                <input asp-for="Input.OldPassword" class="form-control"
                       autocomplete="current-password"
                       aria-required="true"
                       placeholder="Current password" />
                <label asp-for="Input.OldPassword">Current Password</label>
                <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.NewPassword" class="form-control"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="New password" />
                <label asp-for="Input.NewPassword">New Password</label>
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control"
                       autocomplete="new-password"
                       aria-required="true"
                       placeholder="Confirm new password" />
                <label asp-for="Input.ConfirmPassword">Confirm New Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg password-change-btn">
                <i class="fas fa-save me-2"></i> Update Password
            </button>

            <div class="text-center mt-4">
                <a asp-page="./Index" class="text-decoration-none">
                    <i class="fas fa-arrow-left me-2"></i> Back to Profile
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}