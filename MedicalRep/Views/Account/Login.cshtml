@model LoginViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header text-white divv">
                    <div class="text-center">
                        <i class="fas fa-user-lock fa-3x mb-3"></i>
                        <h2>PharmaRep Login</h2>
                        <p class="mb-0">Access your professional dashboard</p>
                    </div>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your password" />
                                <button class="btn btn-outline-secondary toggle-password" type="button">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i> Login
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <a asp-area="Identity" asp-page="/Account/ForgotPassword" class="text-decoration-none">Forgot password?</a>
                            <span class="mx-2">|</span>
                            <a asp-action="Register" class="text-decoration-none">Create new account</a>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <p class="mb-0">Need help? <a href="#" class="text-decoration-none">Contact support</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('.toggle-password').click(function() {
                const passwordInput = $(this).parent().find('input');
                const icon = $(this).find('i');

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
        });
    </script>

    <style>
        .divv{
            background-color: #2c3e50;
        }
        .card {
            border-radius: 15px;
            overflow: hidden;
            border: none;
        }

        .card-header {
            padding: 2rem;
            border-bottom: none;
        }

        .form-control-lg {
            padding: 0.75rem 1rem;
            border-radius: 8px;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }

        .toggle-password {
            border-left: none;
            background-color: #f8f9fa;
        }

        .btn-primary {
            background-color: #2c3e50;
            padding: 0.75rem;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #f8f9fa;
                transform: translateY(-2px);
                color: #2c3e50
            }

        a {
            color: #2c3e50;
            transition: color 0.3s;
        }

            a:hover {
                colorL: #2c3e50;
                text-decoration: underline;
            }
    </style>
}