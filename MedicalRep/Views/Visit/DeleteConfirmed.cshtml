@model MedicalRep.Models.Visit

@{
    ViewData["Title"] = "Delete Visit";
    Layout = "_Layout";
}

<h1>Confirm Delete Visit</h1>

<div class="container p-4 bg-light border rounded shadow-sm">
    <h4 class="text-danger">Are you sure you want to delete this visit?</h4>

    <div class="mb-3">
        <strong>Doctor:</strong> @Model.Doctor?.FName @Model.Doctor?.LName<br />
        <strong>Visit Date:</strong> @Model.VisitDate.ToString("yyyy-MM-dd HH:mm")<br />
        <strong>Status:</strong> @Model.Status
    </div>

    <form asp-action="Delete" asp-controller="Visits" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
