@model List<MedicalRep.Models.Visit>
@{
    ViewData["Title"] = "Visit History";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a asp-controller="DoctorDashboard" asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Medical Rep</th>
                    <th>Status</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var visit in Model)
                {
                    <tr>
                        <td>@visit.VisitDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                        <td>@visit.MedicalRep?.FName @visit.MedicalRep?.LName</td>
                        <td>
                            <span class="badge @(visit.VisitDate >= DateTime.Now ? "bg-info" : "bg-success")">
                                @(visit.VisitDate >= DateTime.Now ? "Upcoming" : "Completed")
                            </span>
                        </td>
                        <td>@visit.VisitNotes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>